{
  "name": "@kentra/ui-kit-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "Kentra UI Kit monorepo (npm workspaces)",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "dev:docs": "npm -w @kentra/docs run dev",
    "dev:astro": "npm -w @kentra/astro run dev",
    "dev:angular": "npm -w @kentra/angular run dev"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vitest": "^2.1.5"
  }
}
